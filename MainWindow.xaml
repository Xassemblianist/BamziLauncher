<Window x:Class="BamziLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BamziLauncher" Height="500" Width="850" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="Black">

    <Grid>
        <Image Source="/fenasal.jpg" Stretch="UniformToFill" Opacity="0.6" Margin="0,-188,0,-2"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="BAMZI MC" Foreground="#FFD700" FontSize="60" FontWeight="ExtraBold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10" FontFamily="Bahnschrift SemiBold">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="FORGE 1.20.1 EDITION" Foreground="White" FontSize="18" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Margin="0,0,0,50" Opacity="0.9"/>

            <TextBlock Text="OYUNCU ADI:" Foreground="White" FontWeight="Bold" Margin="5,0,0,5"/>
            <TextBox Name="txtUsername" Width="300" Height="40" FontSize="20" FontWeight="Bold" 
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,0,0,30" 
                     BorderThickness="0" Background="White" Opacity="0.9"/>

            <Button Name="btnPlay" Content="OYNA" Click="Button_Click" 
                    Width="250" Height="70" Background="#2ecc71" Foreground="White" 
                    FontSize="30" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock Name="txtStatus" Text="Hazır bekliyor..." Foreground="LightGray" 
                       FontSize="14" HorizontalAlignment="Center" Margin="0,20,0,5"/>

            <ProgressBar Name="pbDownload" Width="300" Height="10" Background="#333" Foreground="#2ecc71" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>